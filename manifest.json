{
  "manifest_version": 3,
  "name": "NutriData - Product Nutrition Analyzer",
  "version": "1.0",
  "description": "Analyzes nutrition information for products on supported online shops.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://shop.rewe.de/*"],
      "run_at": "document_idle",
      "js": ["src/main.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/core/utils.js", "src/core/ui.js", "src/shops/rewe.js"],
      "matches": ["*://shop.rewe.de/*"]
    }
  ]
}
