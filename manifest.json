{
  "manifest_version": 3,
  "name": "NutriData - Product Nutrition Analyzer for REWE, Amazon & Mercadona",
  "version": "1.6.0",
  "description": "Analyzes nutrition information for products on supported online shops. (REWE, Amazon & Mercadona)",
  "permissions": ["storage", "webNavigation"],
  "background": {
    "service_worker": "background.ts"
  },
  "icons": {
    "16": "icons/Nutridata Watercolor Logo.png",
    "48": "icons/Nutridata Watercolor Logo.png",
    "128": "icons/Nutridata Watercolor Logo.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://shop.rewe.de/*",
        "*://www.amazon.de/*",
        "*://www.amazon.co.uk/*",
        "*://tienda.mercadona.es/*",
        "*://www.rewe.de/shop/*"
      ],
      "run_at": "document_idle",
      "js": ["src/search.ts"],
      "exclude_matches": ["*://shop.rewe.de/products/*", "*://tienda.mercadona.es/product/*"]
    },
    {
      "matches": [
        "*://shop.rewe.de/p/*",
        "*://shop.rewe.de/products/*",
        "*://www.amazon.de/*",
        "*://www.amazon.co.uk/*",
        "*://tienda.mercadona.es/*"
      ],
      "run_at": "document_end",
      "js": ["src/main.ts"]
    }
  ]
}
