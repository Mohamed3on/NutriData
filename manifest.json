{
  "manifest_version": 3,
  "name": "NutriData - Product Nutrition Analyzer",
  "version": "1.0",
  "description": "Analyzes nutrition information for products on supported online shops.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://shop.rewe.de/productList*"],
      "run_at": "document_idle",
      "js": ["src/search"]
    },
    {
      "matches": ["*://shop.rewe.de/p/*", "*://shop.rewe.de/products/*"],
      "exclude_matches": ["*://shop.rewe.de/productList*"],
      "run_at": "document_idle",
      "js": ["src/main"]
    }
  ]
}
